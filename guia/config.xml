<?xml version='1.0' encoding='utf-8'?>
<widget id="br.com.morettic.guiafloripa.CityWatch" version="1.2.9" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>GuiaFloripa</name>
    <description>
        APP Guia Floripa City Watch Eventos.
    </description>
    <author email="android@morettic.com.br" href="http://morettic.com.br">
        http://morettic.com.br Tecnologia + Inovação = Experiências Digitais
    </author>
    <content src="index.html" />
    <preference name="Fullscreen" value="true" />
    <preference name="Orientation" value="portrait" />
    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="SplashScreenDelay" value="5000" />
    <preference name="android-targetSdkVersion" value="25" />
    <access origin="*" />
    <icon platform="android" src="www/img/icone.png" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <splash density="port-hdpi" src="www/img/splash_4.png" />
        <splash density="port-ldpi" src="www/img/splash_3.png" />
        <splash density="port-mdpi" src="www/img/splash_2.png" />
        <splash density="port-xhdpi" src="www/img/splash_1.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="^6.2.3" />
    <engine name="browser" spec="^5.0.1" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-splashscreen" spec="^4.0.3" />
    <plugin name="cordova-plugin-geolocation" spec="^2.4.3" />
    <plugin name="cordova-plugin-googlemaps" spec="^1.4.1">
        <variable name="API_KEY_FOR_ANDROID" value="AIzaSyAkDJkZg4Y5Yo3Fpeh-REWIQMVvULWEZkM" />
        <variable name="API_KEY_FOR_IOS" value="AIzaSyBIgd_8suqQ-mT29qyY2FqmllQMoNidK9A" />
    </plugin>
    <plugin name="cordova-plugin-x-toast" spec="^2.6.0" />
    <plugin name="cordova.plugins.diagnostic" spec="^3.6.5" />
    <plugin name="cordova-plugin-admob-simple" spec="^3.3.4" />
    <plugin name="onesignal-cordova-plugin" spec="^2.1.2" />
    <plugin name="cordova-plugin-network-information" spec="^1.3.3" />
    <plugin name="cordova-plugin-x-socialsharing" spec="^5.2.0" />
    <plugin name="cordova-plugin-device" spec="^1.1.6" />
</widget>
